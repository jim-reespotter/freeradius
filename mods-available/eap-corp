##
##  EAP config for corporate device auth
##

eap eap-corp {

	default_eap_type = tls
	timer_expire = 60
	ignore_unknown_eap_types = yes
	cisco_accounting_username_bug = no
	max_sessions = ${max_requests}

	tls-config tls-common {




		private_key_password = ${certPassPhrase} 
		private_key_file = ${certdir}/serverCert.key 
		certificate_file = ${certdir}/serverCert.pem
		
		ca_file = ${certdir}/corp_trusted_cas.pem
		ca_path = ${cadir}
		cipher_list = "DEFAULT"
		cipher_server_preference = no

		tls_min_version = "1.2"
		tls_max_version = "1.2"

		ecdh_curve = ""

		cache {
			enable = no
#			lifetime = 24 # hours
		#	name = "EAP module"
		#	persist_dir = "${logdir}/tlscache"
#			store {
#				Tunnel-Private-Group-Id
#			}
		}

		verify {
		#	tmpdir = /tmp/radiusd
		}

		ocsp {
			enable = no
#			override_cert_url = yes
#			url = "http://127.0.0.1/ocsp/"
		#	use_nonce = yes
		#	timeout = 0
		#	softfail = no
		}
	}

	tls {

		tls = tls-common
		virtual_server = check-eap-tls-corp
	}
}
