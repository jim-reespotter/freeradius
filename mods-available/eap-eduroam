##
##  EAP config for eduroam auth
##

eap eap-eduroam {

	default_eap_type = peap
	timer_expire = 60
	ignore_unknown_eap_types = yes
	cisco_accounting_username_bug = no
	max_sessions = ${max_requests}

	tls-config tls-common {

		## This is the server cert. Include intermediate CA in serverCert.pem if you need to
		private_key_password = ${certPassPhrase}
		private_key_file = ${certdir}/serverCert.key
		certificate_file = ${certdir}/serverCert.pem

		## This one is for EAP-TLS only - a collection of CAs that we'll trust
		ca_file = ${certdir}/eduroam_trusted_cas.pem
		
		## ??
		ca_path = ${cadir}
		cipher_list = "DEFAULT"
		cipher_server_preference = no

		tls_min_version = "1.2"
		tls_max_version = "1.2"

		ecdh_curve = ""

		## Don't enable this unless you have a means of removing old session records
		cache {
			enable = no
			lifetime = 24 
##			name = "eduroam"
##			persist_dir = "/var/cache/freeradius/eduroam"
#			store {
#				Tunnel-Private-Group-Id
#			}
		}

		verify {
		#	tmpdir = /tmp/radiusd
		}

		ocsp {
			enable = no
#			override_cert_url = yes
#			url = "http://127.0.0.1/ocsp/"
		#	use_nonce = yes
		#	timeout = 0
		#	softfail = no
		}
	}

	tls {

		tls = tls-common
		virtual_server = check-eap-tls-eduroam
	}

	peap {
		tls = tls-common
		default_eap_type = mschapv2
		## One or both to yes to get inner username to outer?
		copy_request_to_tunnel = no
		use_tunneled_reply = no

		virtual_server = "eduroam-peap-inner"
	}
}
